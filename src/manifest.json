{
  "manifest_version": 3,
  "name": "RotateScreen",
  "version": "1.0.0",
  "description": "YouTube動画を任意の角度に回転表示するブラウザ拡張機能",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/index.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "RotateScreen"
  },
  "options_page": "options/options.html"
}
